datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  firstName    String?
  lastName     String?
  profileImage String?
  isAdmin      Boolean  @default(false)  // New field for admin status
}

model Post {
  id            String   @id @default(uuid())
  title         String
  content       String
  slug          String   @unique
  featuredImage String
  draft         Boolean
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  authorImage   String?  // Optional: Author image URL
  authorName    String
}
